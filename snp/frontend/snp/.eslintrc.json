{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint", "prettier"],
  "ignorePatterns": [
    "node_modules",
    "package.json",
    "tsconfig.json",
    ".eslint*",
    ".prettier*"
  ],
  "rules": {
    "prettier/prettier": "error"
  }
}
